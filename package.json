{
  "name": "fanfiction-enhancements",
  "version": "0.6.12",
  "author": "Arne 'TigeR' Linck",
  "description": "FanFiction.net Enhancements",
  "license": "MIT",
  "homepage": "https://github.com/amur-tiger/fanfiction-enhancements",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/NekiCat/fanfiction-enhancements.git"
  },
  "bugs": {
    "url": "https://github.com/amur-tiger/fanfiction-enhancements/issues"
  },
  "keywords": [
    "userscript",
    "fanfiction"
  ],
  "main": "fanfiction-enhancements.user.js",
  "directories": {
    "test": "tests"
  },
  "scripts": {
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "eslint --color src",
    "test": "run-p test:*",
    "test:unit": "jest src",
    "test:types": "tsc --noEmit",
    "build": "ts-node-script scripts/build.ts",
    "watch": "ts-node-script scripts/build.ts --watch",
    "clean": "rimraf target"
  },
  "dependencies": {
    "ffn-parser": "^0.0.5"
  },
  "devDependencies": {
    "@types/greasemonkey": "^4.0.1",
    "@types/jest": "^26.0.22",
    "@typescript-eslint/eslint-plugin": "^4.19.0",
    "@typescript-eslint/parser": "^4.19.0",
    "esbuild": "^0.11.4",
    "eslint": "^7.22.0",
    "eslint-config-airbnb-typescript": "^12.3.1",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^3.3.1",
    "ignore-styles": "^5.0.1",
    "jest": "^26.6.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.5.4",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.3"
  },
  "prettier": {
    "printWidth": 120
  },
  "jest": {
    "preset": "ts-jest",
    "moduleNameMapper": {
      "^.+\\.(css|less)$": "<rootDir>/config/css-stub.ts"
    }
  }
}
